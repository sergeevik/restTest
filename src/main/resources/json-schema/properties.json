{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "baseUrl": {
      "type": "string",
      "description": "базовый url для всех запросов"
    },
    "port": {
      "type": "integer",
      "description": "port для всех запросов"
    },
    "auth": {
      "$ref": "common.json#definitions/auth"
    },
    "content-type": {
      "type": "string",
      "description": "тип контента"
    },
    "schemaBaseUrl": {
      "type": "string",
      "description": "адрес схем"
    },
    "requestsFolder": {
      "type": "string",
      "description": "каталог запросов"
    },
    "scenariosFolder": {
      "type": "string",
      "description": "каталог сценариев"
    },
    "requestList": {
      "$ref": "common.json#definitions/listString",
      "description": "список запросов"
    },
    "scenarioList": {
      "$ref": "common.json#definitions/listString",
      "description": "список сценариев"
    },
    "fullPathToLogFile":{
      "type": "string",
      "description": "путь к логам"
    },
    "logLevel":{
      "type": "string",
      "enum": [
        "INFO",
        "DEBUG",
        "WARN"
      ],
      "default": "INFO",
      "description": "уровень логов"
    }
  },
  "additionalProperties": true,
  "required": ["baseUrl"]
}