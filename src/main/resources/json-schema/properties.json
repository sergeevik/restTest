{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "baseUrl": {
      "type": "string"
    },
    "port": {
      "type": "integer"
    },
    "auth": {
      "$ref": "common.json#definitions/auth"
    },
    "content-type": {
      "type": "string"
    },
    "schemaBaseUrl": {
      "type": "string"
    },
    "requestsFolder": {
      "type": "string"
    },
    "scenariosFolder": {
      "type": "string"
    },
    "requestList": {
      "$ref": "common.json#definitions/listString"
    },
    "scenarioList": {
      "$ref": "common.json#definitions/listString"
    },
    "fullPathToLogFile":{
      "type": "string"
    },
    "logLevel":{
      "type": "string",
      "enum": [
        "INFO",
        "DEBUG",
        "WARN"
      ],
      "default": "INFO"
    }
  },
  "additionalProperties": true,
  "required": ["baseUrl"]
}